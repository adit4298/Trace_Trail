# Application Settings
APP_NAME=TraceTrail API
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5433/dbname

# Security - GENERATE YOUR OWN SECRET KEY (Run: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=generate-a-secure-secret-key-here-using-python-command
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000,chrome-extension://EXTENSION_ID

# API Documentation
SHOW_DOCS=True

# Extension Settings
EXTENSION_ENABLED=True
EXTENSION_WEBSOCKET_ENABLED=True
EXTENSION_API_VERSION=1.0
EXTENSION_RATE_LIMIT=100

# External Services (for future use)
SOCIAL_MEDIA_API_KEY=

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True
